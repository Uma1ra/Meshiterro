<div class="profile-container">
  <h3 class ="profile-name"><%= @show_user.name %></h3>
  <%= image_tag @show_user.get_profile_image(100,100) %>
  
  <% if @show_user == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@show_user.id) %></p>
  <% end %>
</div>

<%= render "post_images/list", post_images: @user_post_images %>